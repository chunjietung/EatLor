<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.comp210p.eatlor.MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="@string/hintText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:cursorVisible="false"
        android:layout_toStartOf="@+id/addButton"
        android:background="#ffffff"
        android:layout_above="@+id/foodListView"
        android:layout_margin="4dp"
        android:singleLine="true"
        android:paddingLeft="6dp"
        android:capitalize="sentences" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/addButtonText"
        android:id="@+id/addButton"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/sortButton"
        android:background="#ca314d"
        android:textColor="#ffffff"
        android:layout_margin="4dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodListView"
        android:layout_toStartOf="@+id/addButton"
        android:layout_below="@+id/addButton"
        android:layout_alignEnd="@+id/addButton"
        tools:listitem="@layout/list_layout"
        android:layout_above="@+id/sortButton" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sortText"
        android:id="@+id/sortButton"
        android:layout_above="@+id/hitButton"
        android:layout_alignParentStart="true"
        android:background="#2d18f1"
        android:textColor="#ffffff"
        android:layout_margin="6dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hitMeText"
        android:id="@+id/hitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#8b32b5"
        android:textColor="#ffffff"
        android:layout_margin="6dp" />

</RelativeLayout>
